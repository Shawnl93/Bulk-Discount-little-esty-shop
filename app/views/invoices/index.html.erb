<%= render partial: 'layouts/merchants_header', locals: { merch_name: @merchant.name, merch_id: @merchant.id }%>

<h3 style="background-color:#E0E0E0; border-top: 2px solid black;"><center>My Invoices</center></h3>
<% @merchant.invoices.uniq_invoices.each do |invoice|%>
  <p>Invoice #<%= link_to invoice.id, merchant_invoice_path(@merchant, invoice) %></p>
<% end %>
