<%= render partial: 'layouts/merchants_header', locals: { merch_name: @merchant.name, merch_id: @merchant.id }%>

<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @item.name %><br><br>

  <%= form.label :description %>
  <%= form.text_area :description, :rows => 5, value: @item.description %><br><br>

  <%= form.label :unit_price %>
  <%= form.text_field :unit_price, value: @item.unit_price %><br><br>

  <%= form.submit 'Update Item' %>
<% end %>